@model IEnumerable<CifrOblako1.Models.Product>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Список Услуг</h2>
        </div>
        <div class="col-6 text-lg-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> Добавить новую Услугу
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thread>    
                <tr>
                  <th>
                      Название Услуги
                  </th>
                  <th>
                      Цена
                  </th>
                  <th></th>
                </tr>              
            </thread>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>
                        <td width="30%">@obj.Price</td>
                        <td class="text-center">
                            <div class="w-50 btn-group" role="group">
                                <a asp-controller="Product" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary">Изменить</a>

                                <a asp-controller="Product" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger">Удалить</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Нет данных</p>
    }
</div>

