@model CifrOblako1.Models.Product

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-4">
        <div class="form-group row">
            <h2 class="text-info pl-3">Удалить Услугу</h2>
        </div>
        <div class="row">
            <div class="col-10">
                <div class="form-group row" style="margin-bottom:5px">
                    <div class="col-4">
                        <label >Название</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled class="form-control w-100" />
                    </div>

                </div>
                <div class="form-group row" style="margin-bottom:10px">
                    <div class="col-4">
                        <label>Цена</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" disabled class="form-control w-100" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Удалить" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">
                                Назад
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>


@{
}

